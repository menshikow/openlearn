{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "types": ["bun", "node"],
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "**/*.json"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".opencode/openlearn/openlearn.db",
    ".opencode/openlearn/openlearn.db-*"
  ]
}
