{
  "name": "openlearn",
  "version": "1.0.0",
  "description": "AI-mentored development framework for opencode",
  "type": "module",
  "scripts": {
    "test": "bun test",
    "test:structure": "bun test tests/structure.test.ts",
    "test:frontmatter": "bun test tests/frontmatter.test.ts",
    "test:json": "bun test tests/json.test.ts",
    "test:references": "bun test tests/references.test.ts",
    "test:db": "bun test ./tests/database.test.ts",
    "test:coverage": "bun test --coverage",
    "typecheck": "tsc --noEmit",
    "db:init": "bun run src/db.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "glob": "^10.3.0",
    "gray-matter": "^4.0.3",
    "typescript": "^5.2.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "exports": {
    ".": {
      "import": "./src/db.ts",
      "types": "./src/db.ts"
    }
  }
}
